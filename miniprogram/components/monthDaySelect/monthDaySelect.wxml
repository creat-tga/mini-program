<!--components/monthDaySelect/monthDaySelect.wxml-->
<view class="date-range-picker">
  <view class="picker-row">
    <view class="date-item {{!startDisplay ? 'placeholder' : ''}}" bind:tap="onOpenStart">
      {{startDisplay || '开始日期'}}
    </view>
    <view class="separator">至</view>
    <view class="date-item {{!endDisplay ? 'placeholder' : ''}}" bind:tap="onOpenEnd">
      {{endDisplay || '结束日期'}}
    </view>
  </view>

  <t-picker
    visible="{{visible}}"
    value="{{pickerValue}}"
    title="{{pickerTitle}}"
    cancelBtn="取消"
    confirmBtn="确定"
    bindchange="onConfirm"
    bindpick="onColumnChange"
    bindcancel="onClose"
  >
    <t-picker-item options="{{months}}" />
    <t-picker-item options="{{days}}" />
  </t-picker>
</view>